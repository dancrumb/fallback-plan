{
  "ecmaVersion": 6,
  "parserOptions": {
    "sourceType": "module"
  },
  "ecmaFeatures": {
    "impliedStrict": true,
    "modules": true
  },
  "root": true,
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "airbnb"
  ],
  "rules": {
    "no-constant-condition": 0,
    "indent": ["error", 2],
    "no-param-reassign": ["error", { "props": false }]
  }
}
